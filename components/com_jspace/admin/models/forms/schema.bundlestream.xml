<?xml version="1.0" encoding="UTF-8"?>
<form
	name="bundlestream"
	label="COM_JSPACE_DATAOBJECT_SCHEMA_BUNDLESTREAM_LABEL"
	description="COM_JSPACE_DATAOBJECT_SCHEMA_BUNDLESTREAM_DESC">
	<fields name="metadata">
		<fieldset name="jspacemetadata"
			label="COM_JSPACE_DATASTREAMOBJECT_METADATA_LABEL">
			<field name="title" id="title" type="jspace.metadatatext"/>
			<field name="fileName" id="fileName" type="jspace.metadatatext"/>
			<field name="contentType" id="contentType" type="jspace.metadatatext"/>
			<field name="contentLength" id="contentLength" type="jspace.metadatatext"/>
		</fieldset>
	</fields>
	
	<fields name="streams">
		<fieldset name="jspacestream"
			label="COM_JSPACE_DATASTREAMOBJECT_STREAM_LABEL">
			<field
				name="original"
				type="jspace.file"
				label="Files to Archive"
				bundle="original"
				metadataextractionmapping="metadata"
				multiple="true"/>
		</fieldset>
	</fields>
</form>