<?xml version="1.0" encoding="UTF-8"?>
<form
	name="datastreamobject"
	label="COM_JSPACE_DATAOBJECT_SCHEMA_DATASTREAMOBJECT_LABEL"
	description="COM_JSPACE_DATAOBJECT_SCHEMA_DATASTREAMOBJECT_DESC">
	<fields name="metadata">
		<fieldset name="jspacemetadata"
			label="COM_JSPACE_DATASTREAMOBJECT_METADATA_LABEL">
			<field name="title" id="title"/>
			<field name="source" id="source" type="jspace.metadatatextarea" readonly="true" rows="6" multiple="true"/>
		</fieldset>
	</fields>
	
	<fields name="streams">
		<fieldset name="jspacestream"
			label="COM_JSPACE_DATASTREAMOBJECT_STREAM_LABEL">
			<field 
				name="original" 
				type="jspace.file" 
				label="Select a file to archive" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				bundle="original"/>
		</fieldset>
	</fields>
</form>