<?xml version="1.0" encoding="UTF-8"?>
<form
	name="basicassets"
	label="COM_JSPACE_RECORD_SCHEMA_BASICASSETS_LABEL"
	description="COM_JSPACE_RECORD_SCHEMA_BASICASSETS_DESC">
	<fields name="metadata">
		<fieldset name="jspacemetadata"
			label="COM_JSPACE_METADATA_LABEL">
			<field name="title" id="title"/>
			<field name="source" id="source" type="jspace.metadatatextarea" readonly="true" rows="6" multiple="true"/>
		</fieldset>
	</fields>
	
	<fields name="assets">
		<fieldset name="jspacefiles"
			label="COM_JSPACE_FILES_LABEL">
			<field 
				name="video" 
				type="jspace.file" 
				label="Raw Video" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				bundle="original"
				validate="jspacefiles"/>
			
			<field 
				name="images" 
				type="jspace.file" 
				label="Raw Images" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				bundle="original"
				validate="jspacefiles"
				multiple="true"/>
			
			<field 
				name="itemPreview" 
				type="jspace.file" 
				label="Item Preview" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				bundle="item_previews"
				validate="jspacefiles"/>
		</fieldset>
	</fields>
</form>