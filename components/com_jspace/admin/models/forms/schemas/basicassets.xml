<?xml version="1.0" encoding="UTF-8"?>
<form
	name="basicassets"
	label="COM_JSPACE_RECORD_SCHEMA_BASICASSETS_LABEL"
	description="COM_JSPACE_RECORD_SCHEMA_BASICASSETS_DESC">
	<fields name="metadata">
		<fieldset name="jspacemetadata"
			label="COM_JSPACE_METADATA_LABEL">
			<field name="title" id="title"/>
			<field name="fileName" id="fileName"/>
		</fieldset>
	</fields>
	
	<fields name="collection">
		<fieldset name="jspaceassets"
			label="COM_JSPACE_FILES_LABEL">
			<field 
				name="video" 
				type="jspace.asset" 
				label="Raw Video" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				derivative="original"
				validate="jspaceassets"
				bundle="videos"
				metadata="original"/>
			
			<field 
				name="images" 
				type="jspace.asset" 
				label="Raw Images" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				derivative="original"
				validate="jspaceassets"
				multiple="true"/>
			
			<field 
				name="itemPreview" 
				type="jspace.asset" 
				label="Item Preview" 
				description="Choose an image from your computer with maximum 100KB" 
				size="10" 
				accept="image/*"
				derivative="item_previews"
				validate="jspaceassets"/>
		</fieldset>
	</fields>
</form>