<?xml version="1.0" encoding="UTF-8"?>
<form
	name="basicreference"
	label="COM_JSPACE_RECORD_SCHEMA_BASICREFERENCE_LABEL"
	description="COM_JSPACE_RECORD_SCHEMA_BASICREFERENCE_DESC">
	<fields name="metadata">
		<fieldset name="jspacemetadata"
			label="COM_JSPACE_RECORD_METADATA_LABEL">
			<field 
				name="title" 
				type="jspace.metadatatext"
				label="COM_JSPACE_RECORD_METADATA_TITLE_LABEL"
				filter="JComponentHelper::filterText" 
				required="true"/>
			<field 
				name="author" 
				type="jspace.metadatatext"
				label="COM_JSPACE_RECORD_METADATA_AUTHOR_LABEL"
				filter="JComponentHelper::filterText" 
				required="true"/>
			<field 
				name="description" 
				type="editor"
				label="COM_JSPACE_RECORD_METADATA_DESCRIPTION_LABEL"
				filter="JComponentHelper::filterText" 
				buttons="true"
				required="false"/>
		</fieldset>
	</fields>
	<fields name="weblinks">
		<fieldset name="jspaceweblinks"
			label="COM_JSPACE_LINKS_LABEL">
			<field 
				name="links"
				type="jspace.weblinklist" 
				label="Web Links" 
				description="Specify a web link." 
				size="10"/>
		</fieldset>
	</fields>
</form>