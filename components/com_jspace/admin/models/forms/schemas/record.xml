<?xml version="1.0" encoding="UTF-8"?>
<form
    name="record"
    label="COM_JSPACE_RECORD_SCHEMA_RECORD_LABEL"
    description="COM_JSPACE_RECORD_SCHEMA_RECORD_DESC">
    <fields name="metadata">
        <fieldset name="jspacemetadata"
            label="COM_JSPACE_METADATA_LABEL">
            <field 
                name="title" 
                type="text"
                label="COM_JSPACE_METADATA_TITLE_LABEL"
                filter="JComponentHelper::filterText" 
                required="true"
                multiple="false"/>
            <field 
                name="creator" 
                type="jspace.metadatatext"
                label="COM_JSPACE_METADATA_CREATOR_LABEL"
                filter="JComponentHelper::filterText" 
                required="true"
                multiple="true"
                maximum="8"/>
            <field 
                name="description" 
                type="editor"
                label="COM_JSPACE_METADATA_DESCRIPTION_LABEL"
                filter="JComponentHelper::filterText"/>
            <field 
                name="type" 
                type="list"
                label="COM_JSPACE_METADATA_TYPE_LABEL"
                filter="JComponentHelper::filterText">
                <option>Journal</option>
                <option>Book</option>
                <option>Thesis</option>
            </field>
            <field 
                name="abstract" 
                type="jspace.metadatatextarea"
                label="COM_JSPACE_METADATA_ABSTRACT_LABEL"
                filter="JComponentHelper::filterText"/>
            <field 
                name="ownership" 
                type="jspace.metadatatext"
                label="COM_JSPACE_METADATA_OWNERSHIP_LABEL"
                filter="JComponentHelper::filterText"
                multiple="true"/>
            <field 
                name="publisher" 
                type="jspace.metadatatext"
                label="COM_JSPACE_METADATA_PUBLISHER_LABEL"
                filter="JComponentHelper::filterText"/>
            <field 
                name="created" 
                type="jspace.metadatatext"
                label="COM_JSPACE_METADATA_CREATED_LABEL"
                filter="JComponentHelper::filterText"/>
            <field 
                name="modified" 
                type="jspace.metadatatext"
                label="COM_JSPACE_METADATA_MODIFIED_LABEL"
                filter="JComponentHelper::filterText"/>
            <field 
                name="identifier" 
                type="jspace.metadatatext"
                label="COM_JSPACE_METADATA_IDENTIFIER_LABEL"
                filter="JComponentHelper::filterText"/>
            <field 
                name="license" 
                type="jspace.metadatatextarea"
                label="COM_JSPACE_METADATA_LICENSE_LABEL"
                filter="JComponentHelper::filterText"/>
        </fieldset>
    </fields>
    
    <fields name="collection">
        <fieldset name="jspaceassets"
            label="COM_JSPACE_FILES_LABEL">
            <field 
                name="item_preview" 
                type="jspace.asset" 
                label="Item Preview" 
                description="Choose an image from your computer with maximum 100KB" 
                size="10" 
                accept="image/*"
                validate="jspaceassets"/>
            
            <field 
                name="item_thumbnail" 
                type="jspace.asset" 
                label="Item Thumbnail" 
                description="Choose an image from your computer with maximum 100KB" 
                size="10" 
                accept="image/*"
                validate="jspaceassets"/>
        </fieldset>
    </fields>
    
    <fields name="weblinks">
        <fieldset name="jspaceweblinks"
            label="COM_JSPACE_LINKS_LABEL">
            <field 
                name="weblink"
                type="jspace.weblinklist" 
                label="Web Links" 
                description="Specify a web link." 
                size="10"/>
        </fieldset>
    </fields>
</form>