<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>com_jspace</name>
	<creationDate>2013-05-15</creationDate>
	<author>KnowledgeARC</author>
	<authorEmail>development@knowledgearc.com</authorEmail>
	<authorUrl>http://www.knowledgearc.org</authorUrl>
	<copyright>>Copyright (C) 2013-2014 KnowledgeARC Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>0.5.0</version>
	<description>COM_JSPACE_XML_DESCRIPTION</description>
    
    <install>
    	<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	
    <uninstall>
    	<sql>
    		<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    	</sql>
    </uninstall>
    
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<files folder="site">
		<folder>helpers</folder>
		<folder>views</folder>		
		<filename>jspace.php</filename>
		<filename>router.php</filename>
	</files>
	
 	<languages folder="site">
 		<language tag="en-GB">language/en-GB/en-GB.com_jspace.ini</language>
 	</languages>
 	
    <media folder="media" destination="com_jspace">
    	<folder>css</folder>
    </media>

	<administration>
		<menu img="class:jspace">JSpace</menu>
		<submenu>
			<menu 
				link="option=com_jspace" 
				view="cpanel" img="class:jspace"
				alt="JSpace/CPanel">com_jspace_cpanel</menu>
			<menu 
				link="option=com_jspace&amp;view=records" 
				view="records" img="class:jspace"
				alt="JSpace/Records">com_jspace_records</menu>
			<menu 
				link="option=com_categories&amp;extension=com_jspace"
				view="categories" 
				img="class:jspace-cat" 
				alt="JSpace/Categories">com_jspace_categories</menu>
		</submenu>
                
		<files folder="admin">			
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>jspace.php</filename>
	    	<folder>cli</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>layouts</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>		
			<folder>views</folder>
		</files>
		
	 	<languages folder="admin">
 			<language tag="en-GB">language/en-GB/en-GB.com_jspace.ini</language>
 			<language tag="en-GB">language/en-GB/en-GB.com_jspace.sys.ini</language>
 		</languages>
	</administration>
	
    <params>
    </params>
</extension>