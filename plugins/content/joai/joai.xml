	<authorUrl>www.knowledgearc.org</authorUrl>
	<version>0.1.0</version>
	<description>PLG_CONTENT_JOAI_XML_DESCRIPTION</description>
	
    <install>
    	<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	
    <uninstall>
    	<sql>
    		<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    	</sql>
    </uninstall>
    
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<files>
		<filename plugin="joai">joai.php</filename>
		<folder>forms</folder>
		<folder>sql</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_joai.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_joai.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
		</fields>
	</config>
</extension>