	<authorUrl>www.knowledgearc.org</authorUrl>
	<version>0.1.0</version>
	<description>PLG_CONTENT_JSPACEDSPACE_XML_DESCRIPTION</description>
	
	<files>
		<filename plugin="jspacedspace">jspacedspace.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jspacedspace.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jspacedspace.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
                <field 
                    name="url" 
                    type="text" 
                    label="PLG_CONTENT_JSPACEDSPACE_FIELD_URL_LABEL" 
                    description="PLG_CONTENT_JSPACEDSPACE_FIELD_URL_DESC"
                    size="45"/>
                <field 
                    name="username" 
                    type="text" 
                    label="PLG_CONTENT_JSPACEDSPACE_FIELD_USERNAME_LABEL" 
                    description="PLG_CONTENT_JSPACEDSPACE_FIELD_USERNAME_DESC"
                    size="45"/>
                <field 
                    name="password" 
                    type="text" 
                    label="PLG_CONTENT_JSPACEDSPACE_FIELD_PASSWORD_LABEL"
                    description="PLG_CONTENT_JSPACEDSPACE_FIELD_PASSWORD_DESC" 
                    size="45"/>
                <field 
                    name="handle_prefix" 
                    type="text" 
                    label="PLG_CONTENT_JSPACEDSPACE_FIELD_HANDLEPREFIX_LABEL"
                    description="PLG_CONTENT_JSPACEDSPACE_FIELD_HANDLEPREFIX_DESC" 
                    size="45"
                    default="123456789"/>
			</fieldset>
		</fields>
	</config>
</extension>