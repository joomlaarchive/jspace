<?xml version="1.0" encoding="UTF-8"?>
<project name="Content - JSpace Schemas Plugin" default="" basedir=".">
    <property name="dest.plugins.jspace" value="${dest.plugins}/content"/>
    
    <target name="update" description="">
        <echo message="Deploying Content - JSpace Schemas Plugin to Joomla! environment."/>
        <copy todir="${dest.plugins.jspace}/jspaceschemas">
            <fileset dir="${src}" defaultexcludes="true">
                <include name="**"/>
                <exclude name="**/language/**"/>
                <exclude name="**/build*.xml"/>
            </fileset>
        </copy>
        <copy todir="${dest.administrator.languages}">
            <fileset dir="${src}/language" defaultexcludes="true">
                <include name="**/**"/>
            </fileset>
        </copy>
    </target>

    <target name="package" description="Creates a Content - JSpace Schemas Plugin package.">
        <echo message="Packaging Content - JSpace Schemas plugin."/>
        <zip destfile="${package.dest}/plg_content_jspaceschemas.zip"
               basedir="${src}"
               update="true"
               excludes="build*.xml"/>
    </target>
</project>