<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<fieldset name="oai"
			label="PLG_CONTENT_OAI_FIELDSET_LABEL"
            description="PLG_CONTENT_OAI_FIELDSET_DESC">
            <field 
                name="oai_status" 
                type="list" 
                default="-1" 
                label="PLG_CONTENT_OAI_FIELD_STATUS_LABEL" 
                description="PLG_CONTENT_OAI_FIELD_STATUS_DESC"
                class="chzn-color-state">
                <option value="-1">PLG_CONTENT_OAI_FIELD_STATUS_NOHARVEST</option>
                <option value="0">PLG_CONTENT_OAI_FIELD_STATUS_DISABLED</option>
                <option value="1">PLG_CONTENT_OAI_FIELD_STATUS_ENABLED</option>
            </field>
			<field
				name="oai_url"
				type="url"
				id="oai_url"
				description="PLG_CONTENT_OAI_FIELD_URL_DESC"
				filter="string"
				label="PLG_CONTENT_OAI_FIELD_URL_LABEL"
				size="30"/>
			
			<field
				name="oai_harvest"
				id="oai_harvest"
				type="list"
				label="PLG_CONTENT_OAI_FIELD_HARVEST_LABEL"
				description="PLG_CONTENT_OAI_FIELD_HARVEST_DESC"
				default="0">
				<option value="0">PLG_CONTENT_OAI_METADATA</option>
				<option value="1">PLG_CONTENT_OAI_METADATA_LINKS</option>
				<option value="2">PLG_CONTENT_OAI_METADATA_ASSETS</option>
			</field>
            
            <field
                name="oai_set"
                type="text"
                id="oai_set"
                description="PLG_CONTENT_OAI_FIELD_SET_DESC"
                filter="string"
                label="PLG_CONTENT_OAI_FIELD_SET_LABEL"
                size="30"/>
		</fieldset>
	</fields>
</form>