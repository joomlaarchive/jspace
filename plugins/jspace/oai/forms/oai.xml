<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="params">
        <field 
            name="frequency" 
            type="list"
            label="PLG_JSPACE_HARVEST_FREQUENCY_LABEL"
            description="PLG_JSPACE_HARVEST_FREQUENCY_DESC"
            default="0">
            <option value="0">PLG_JSPACE_HARVEST_FREQUENCY_OPTION_FOREVER</option>
            <option value="1">PLG_JSPACE_HARVEST_FREQUENCY_OPTION_ONCE</option>
        </field>
    </fieldset>
    
    <fields name="params">
        <fieldset name="params">
            <field 
                name="sets" 
                type="text"
                label="PLG_JSPACE_OAI_SETS_LABEL"
                description="PLG_JSPACE_OAI_SETS_DESC"/>
            
            <field 
                name="harvest_type" 
                type="list" 
                label="PLG_JSPACE_OAI_HARVESTTYPE_LABEL"
                description="PLG_JSPACE_OAI_HARVESTTYPE_DESC" 
                filter="intval" 
                size="1" 
                default="0">
                <option value="0">PLG_JSPACE_OAI_HARVESTTYPE_OPTION_METADATA</option>
                <option value="1">PLG_JSPACE_OAI_HARVESTTYPE_OPTION_LINKS</option>
                <option value="2">PLG_JSPACE_OAI_HARVESTTYPE_OPTION_ASSETS</option>
            </field>
        </fieldset>
    
        <fields name="discovery">
            <fields name="plugin">
                <fieldset name="discovery">
                    <field 
                        name="metadata"
                        label="PLG_JSPACE_OAI_DISCOVERY_METADATA_LABEL"
                        description="PLG_JSPACE_OAI_DISCOVERY_METADATA_DESC"
                        readonly="true"/>
                    <field 
                        name="assets"
                        label="PLG_JSPACE_OAI_DISCOVERY_ASSETS_LABEL"
                        description="PLG_JSPACE_OAI_DISCOVERY_ASSETS_DESC"
                        readonly="true"/>
                </fieldset>
            </fields>
        </fields>
    </fields>
</form>