<?xml version="1.0" encoding="UTF-8"?>
<project name="JSpace Native Storage Plugin" default="" basedir=".">
	<property name="dest.plugins.jspacestorage" value="${dest.plugins}/jspacestorage"/>
	
	<target name="update" description="">
		<echo message="Deploying JSpace Native Storage Plugin to Joomla! environment."/>
		<copy todir="${dest.plugins.jspacestorage}/native">
			<fileset dir="${src}" defaultexcludes="true">
				<include name="**"/>
				<exclude name="**/language/**"/>
				<exclude name="**/build*.xml"/>
			</fileset>
		</copy>
		<copy todir="${dest.administrator.languages}">
			<fileset dir="${src}/language" defaultexcludes="true">
				<include name="**/**"/>
			</fileset>
		</copy>
	</target>

	<target name="package" description="Creates a JSpace Native Storage Plugin package.">
		<echo message="Packaging JSolr Index JSpace plugin."/>
		<zip destfile="${package.dest}/plg_jspacestorage_native.zip"
		       basedir="${src}"
		       update="true"
		       excludes="build*.xml"/>
	</target>
</project>