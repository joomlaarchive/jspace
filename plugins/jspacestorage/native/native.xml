<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.2" type="plugin" group="jspacestorage" method="upgrade">
	<name>plg_jspacestorage_native</name>
	<author>KnowledgeARC</author>
	<creationDate>2014/03/30</creationDate>
	<copyright>Copyright (C) 2014 KnowledgeARC Ltd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>development@knowledgearc.com</authorEmail>
	<authorUrl>www.knowledgearc.org</authorUrl>
	<version>0.5.0</version>
	<description>PLG_JSPACESTORAGE_NATIVE_XML_DESCRIPTION</description>
	
	<files>
		<filename plugin="native">native.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_jspacestorage_native.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_jspacestorage_native.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="storage">
				<field name="path" type="text" label="COM_JSPACE_STORAGE_PATH_LABEL" description="COM_JSPACE_STORAGE_PATH_DESC">
					<option value="0">No</option> 
					<option value="1">Yes</option> 
				</field>
				<field
					name="upload_maxsize"
					type="text"
					label="COM_JSPACE_STORAGE_UPLOAD_MAXSIZE_LABEL"
					description="COM_JSPACE_STORAGE_UPLOAD_MAXSIZE_DESC"
					class="inputbox"
					default="10"
					filter="int"/>
				<field
					name="content_types_allowed"
					type="text"
					label="COM_JSPACE_STORAGE_ALLOWED_FILETYPES_ALLOWED_LABEL"
					description="COM_JSPACE_STORAGE_ALLOWED_FILETYPES_ALLOWED_DESC"
					class="inputbox"/>
			</fieldset>
		</fields>
	</config>
</extension>